--}}
<main class="profile-container">
    <h2>Username: {{userName}} <a href="/pofile/edit/{{_id}}" id="edit-link" class="edit-link">Edit</a></h2>
      
    <div>
        <h3>User Infomation:</h3>
            Name: {{firstName}} {{lastName}} <br>
            User ID: {{_id}} <br>
            Email: {{emailAddress}} <br>
            Restrictions: {{#each restrictions}} {{this}} {{/each}} <br>
            Role: {{role}} <br>
    </div>
    
    <div>
        <h3>Comments:</h3>
        {{#if comments}}
            <ul>
                {{#each comments}}
                <li>
                    <a href="/comment/{{this._id}}">{{this.content}}</a>
                </li>
                {{/each}}
            </ul>
        {{else}}
            <p>No comments available.</p>
        {{/if}}
    </div> 

    <div>
        <h3>Reviews:</h3>
        {{#if reviews}}
            <ul>
                {{#each reviews}}
                <li>
                    <a href="/review/{{this._id}}">{{this.content}}</a>
                </li>
                {{/each}}
            </ul>
        {{else}}
            <p>No reviews available.</p>
        {{/if}}
    </div>   

    <div class="redirect-links">
        {{#if isAdmin}}
            {{#if banOps}}
                <div class="admin-btns">
                    {{#if banned}}
                        <form action="/admin/unban/{{_id}}" method="POST">
                            <button type="submit" class="unban-btn" id="unban-btn">Unban User</button>
                        </form>
                    {{else}}
                        <form action="/admin/ban/{{_id}}" method="POST">
                            <button type="submit" class="ban-btn" id="ban-btn">Ban User</button>
                        </form>  
                        <br>                  
                    {{/if}}
                </div>
            {{/if}}
            <a id="admin-hidden" href="/admin">Admin</a>
        {{/if}}
        <a href="/logout">Logout</a>
    </div>

</main>